{
  "info": {
    "name": "ZaloPay Payment Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Đăng nhập lấy token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@datn.com\",\n  \"password\": \"user123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Tạo đơn hàng mới",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderItems\": [\n    { \"name\": \"Sản phẩm test\", \"quantity\": 1, \"image\": \"\", \"price\": 100000, \"product\": \"PRODUCT_ID\" }\n  ],\n  \"shippingAddress\": {\n    \"fullName\": \"Nguyễn Văn A\",\n    \"address\": \"123 Đường ABC\",\n    \"city\": \"Hà Nội\",\n    \"postalCode\": \"100000\",\n    \"phone\": \"0123456789\"\n  },\n  \"paymentMethod\": \"zalopay\",\n  \"itemsPrice\": 100000,\n  \"taxPrice\": 0,\n  \"shippingPrice\": 0,\n  \"totalPrice\": 100000\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/order",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "order"]
        }
      }
    },
    {
      "name": "Tạo giao dịch ZaloPay",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderId\": \"ORDER_ID\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/order/zalo-pay",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "order", "zalo-pay"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "ORDER_ID", "value": "" }
  ]
}