{
  "info": {
    "name": "Auth API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Đăng ký user thường",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"User Test\",\n  \"email\": \"usertest@example.com\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Đăng nhập",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"usertest@example.com\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Đăng ký xin làm admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/register-admin",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "register-admin"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admin Request\",\n  \"email\": \"adminrequest@example.com\",\n  \"password\": \"123456\",\n  \"avatar\": \"https://example.com/avatar.jpg\",\n  \"adminRequestImage\": \"https://example.com/confirm.jpg\",\n  \"adminRequestContent\": \"Tôi muốn xin quyền admin để quản lý hệ thống.\"\n}"
        }
      }
    },
    {
      "name": "Lấy danh sách user",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "users"]
        }
      }
    },
    {
      "name": "Lấy thông tin user hiện tại",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "Lấy thông tin user theo ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/users/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "users", ":id"]
        }
      }
    },
    {
      "name": "Bật/tắt trạng thái user",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/users/:id/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "users", ":id", "status"]
        }
      }
    },
    {
      "name": "Lấy nhật ký hoạt động",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/nhatKy",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "nhatKy"]
        }
      }
    },
    {
      "name": "Cập nhật thông tin user",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/users/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "users", ":id"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"User Updated\",\n  \"phone\": \"0987654321\",\n  \"avatar\": \"https://example.com/avatar2.jpg\"\n}"
        }
      }
    },
    {
      "name": "Lấy danh sách yêu cầu admin (superadmin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/admin-requests",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "admin-requests"]
        }
      }
    },
    {
      "name": "Duyệt hoặc từ chối yêu cầu admin (superadmin)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/admin-requests/:id/approve",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "admin-requests", ":id", "approve"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"approve\": true\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "your_jwt_token_here" }
  ]
}