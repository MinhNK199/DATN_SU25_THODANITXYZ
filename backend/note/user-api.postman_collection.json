                },
                {
                  "key": "pageSize",
                  "value": "10",
                  "description": "Số sản phẩm mỗi trang"
                },
                {
                  "key": "keyword",
                  "value": "",
                  "description": "Từ khóa tìm kiếm"
                },
                {
                  "key": "category",
                  "value": "{{categoryId}}",
                  "description": "ID danh mục"
                },
                {
                  "key": "brand",
                  "value": "{{brandId}}",
                  "description": "ID thương hiệu"
                },
                {
                  "key": "minPrice",
                  "value": "",
                  "description": "Giá tối thiểu"
                },
                {
                  "key": "maxPrice",
                  "value": "",
                  "description": "Giá tối đa"
                },
                {
                  "key": "sort",
                  "value": "-createdAt",
                  "description": "Sắp xếp theo trường"
                },
